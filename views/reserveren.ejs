<%- include('./partials/head') %> 
<%- include('./partials/header') %>

<main>

    <section>
    <form class="reservation" action="/reserveren" method="post">
        <fieldset>
            <legend>Reserveer een boek</legend>
            <label for="obaId">oba ID</label>
            <input required id="obaId" type="text" name="obaId" value="<%= locals.reservations?.obaId ?? '' %>"/>
            <label for="userName">Wat is uw voornaam?</label>
            <input required id="userName" type="text" name="userName" value="<%= locals.reservations?.userName ?? '' %>"/>
            <label for="date">Wanneer wilt u een boek lenen?</label>
            <input required id="date" type="date" name="date" value="<%= locals.reservations?.date ?? '' %>"/>
            <input type="submit" value="reserveren">
        </fieldset>
    </form>    
</section>

</main>

