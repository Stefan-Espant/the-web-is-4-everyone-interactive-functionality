<%- include('./partials/head') %> <%-
include('./partials/header') %>

<main>
	<%- include('./partials/searchbar') %>

	<section class="items">
		<!-- Laad de resultaten in en genereert diverse articles met content -->
		<% results.forEach(result => { %>
		<article>
				<img
				src=" <%= result.coverimages %> "
				alt=" <%= result.titles %> "
				/>
			<!-- Laad de titel van het boek in -->
			<h2><%= result.titles[0] %></h2>
			<!-- Laad de schrijver van het boek in -->
			<h3><%= result.authors %></h3>
			<div>
				<!-- Genereert een link met unieke content van het boek -->
				<a href="/item?id=<%= result.id %>">
					bekijk exemplaar
				</a>
			</div>
		</article>
		<% }); %>
	</section>
</main>

<%- include('./partials/foot') %>
